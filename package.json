{
  "name": "@backend/source",
  "version": "1.7.0",
  "license": "MIT",
  "scripts": {
    "start": "nx serve",
    "build": "nx build",
    "test": "nx test",
    "*** Release ***": "",
    "release": "npm version --git-tag-version false --commit-hooks false --workspaces-update false --preid 'rc'",
    "postrelease": "npm run exec -- scripts/postrelease.ts",
    "release:major": "npm run release -- major",
    "release:minor": "npm run release -- minor",
    "release:patch": "npm run release -- patch",
    "release:major:rc": "npm run release -- premajor",
    "release:minor:rc": "npm run release -- preminor",
    "release:patch:rc": "npm run release -- prepatch",
    "release:rc": "npm run release -- prerelease",
    "*** Local ***": "",
    "local:db:create:pg": "docker run --name dev-local-postgres -e POSTGRES_PASSWORD=postgres -d -p 5432:5432 postgres:16",
    "local:db:create:mongo": "docker run --name dev-local-mongodb -d -p 27017:27017 mongo:6",
    "local:db:create": "npm run local:db:create:pg && npm run local:db:create:mongo",
    "local:db:serve:pg": "docker start dev-local-postgres",
    "local:db:serve:mongo": "docker start dev-local-mongodb",
    "local:db:serve": "npm run local:db:serve:pg && npm run local:db:serve:mongo",
    "*** Misc ***": "",
    "exec": "ts-node --project tsconfig.tools.json"
  },
  "private": true,
